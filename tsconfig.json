{
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["dom", "es5"],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "pretty": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**"]
}